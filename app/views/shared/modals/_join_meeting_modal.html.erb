<div class="modal fade" id="joinMeetingModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
        <div class="card-body p-sm-6">
          <div class="card-title mb-6">
            <h3 class="create-only">Join Meeting</h3>
          </div>
          <form action="" onsubmit="openJoinPage(event)" >
            <h5 class="text-left">Meeting ID:</h5>
            <input class="form-control text-center" type="text" name="meeting-id" placeholder="Please enter Meeting ID" />
            <input class="form-control text-center" type="hidden" value="<%= relative_root %>" name="relative_path" placeholder="Please enter Meeting ID" />
            <input class="btn btn-custom-primary" type="submit" value="Join">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
