<%#
include Recorder
%>
<%#
@search, @order_column, @order_direction, recs = recordings(room.bbb_id)
%>
<%#
@pagy, @recordings = pagy_array(recs)
%>
<div class="modal fade" id="listRoomRecordingModal-<%= room.uid %>" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content text-center">
      <div class="modal-body">
      	<h4 class="text-center">Recordings for meeting <%= room.name %></h4>
      	<%= render "shared/sessions", recordings: recordingsList,  pagy: @pagy, only_public: false, user_recordings: true, title: t("recording.all_recordings") %>
      </div>
    </div>
  </div>
